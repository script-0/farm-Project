                              <JFXButton fx:id="modify" layoutX="25.0" layoutY="1.0" prefHeight="32.0" prefWidth="99.0" styleClass="modifyButton" text="Modify">
                                 <graphic>
                                    <ImageView fitHeight="19.0" fitWidth="36.0" pickOnBounds="true" preserveRatio="true">
                                       <image>
                                          <Image url="@../images/modify.png" />
                                       </image>
                                    </ImageView>
                                 </graphic>
                              </JFXButton>
                              <JFXButton fx:id="delete" graphicTextGap="5.0" layoutX="189.0" prefHeight="32.0" prefWidth="90.0" styleClass="deleteButton" text="Delete">
                                 <graphic>
                                    <ImageView fitHeight="20.0" fitWidth="28.0" pickOnBounds="true" preserveRatio="true">
                                       <image>
                                          <Image url="@../images/delete.png" />
                                       </image>
                                    </ImageView>
                                 </graphic>
                              </JFXButton>
                           </children>
                        </Pane>
                        <Label fx:id="label" layoutX="115.0" layoutY="-14.0" prefHeight="27.0" prefWidth="89.0" styleClass="labelDetails" text="Details">
                           <effect>
                              <DropShadow color="#615b5b" />
                           </effect>
                        </Label>
                        <JFXTextField fx:id="surface" disable="true" layoutX="38.0" layoutY="197.0" prefHeight="25.0" prefWidth="247.0" promptText="Surface" styleClass="textField" />
                        <JFXButton fx:id="add" layoutX="210.0" layoutY="10.0" prefHeight="32.0" prefWidth="75.0" styleClass="modifyButton" text="Add">
                           <graphic>
                              <ImageView fitHeight="19.0" fitWidth="36.0" pickOnBounds="true" preserveRatio="true">
                                 <image>
                                    <Image url="@../images/add.png" />
                                 </image>
                              </ImageView>
                           </graphic>
                        </JFXButton>
                     </children>
                     <effect>
                        <DropShadow color="#615b5b" />
                     </effect>
                  </Pane>
                  <Pane layoutX="89.0" layoutY="10.0" prefHeight="319.0" prefWidth="809.0" styleClass="chartPane">
                     <children>
                        <PieChart fx:id="populated" layoutX="414.0" layoutY="5.0" prefHeight="307.0" prefWidth="389.0" style="-fx-border-color: #CCCCCC; -fx-border-radius: 0.6em;" title="Most Populated" />
                        <PieChart fx:id="biggest" layoutX="3.0" layoutY="5.0" prefHeight="307.0" prefWidth="406.0" style="-fx-border-color: #CCCCCC; -fx-border-radius: 0.6em;" title="Biggest" />
                     </children>
                  </Pane>
               </children>
            </Pane>
         </children>
      </VBox>
   </children>
</StackPane>
