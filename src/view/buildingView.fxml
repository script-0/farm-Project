<StackPane styleClass="rootPane" stylesheets="@../style/buildingview.css" xmlns="http://javafx.com/javafx/8.0.171" xmlns:fx="http://javafx.com/fxml/1" fx:controller="controller.BuildingController">
   <children>
      <VBox alignment="CENTER" fillWidth="false">
         <children>
            <Pane prefHeight="740.0" prefWidth="991.0">
               <children>
                  <TableView fx:id="tableView" layoutX="89.0" layoutY="335.0" prefHeight="380.0" prefWidth="450.0">
                     <columns>
                        <TableColumn fx:id="idColumn" prefWidth="129.0" text="Id" />
                        <TableColumn fx:id="nameColumn" prefWidth="162.0" text="Name" />
                        <TableColumn fx:id="surfaceColumn" prefWidth="158.0" text="Surface" />
                     </columns>
                     <columnResizePolicy>
                        <TableView fx:constant="CONSTRAINED_RESIZE_POLICY" />
                     </columnResizePolicy>
                  </TableView>
                  <Pane fx:id="paneDetails" layoutX="578.0" layoutY="372.0" prefHeight="319.0" prefWidth="317.0" styleClass="paneDetails">
